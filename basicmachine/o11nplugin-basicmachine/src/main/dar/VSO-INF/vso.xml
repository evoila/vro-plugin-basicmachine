<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<module name="BasicMachine" version="${project.version}" build-number="${build.number}" image="images/folder.png" display-name="BasicMachine">
    <description>Basic Virtual Machine providing possibility to store a json string.</description>
    <installation mode="${installation.mode}">
        <action resource="packages/de.evoila.vro.o11n.plugin.basicmachine" type="install-package"/>
    </installation>
    <inventory type="_ROOT"/>
    <finder-datasources>
        <finder-datasource name="main-datasource" adaptor-class="de.evoila.vro.o11n.plugin.basicmachine.BasicMachinePluginAdaptor" concurrent-call="false" anonymous-login-mode="internal"/>
    </finder-datasources>
    <finders>
        <finder type="BasicMachine" datasource="main-datasource" image="images/inventory.png" java-class="de.evoila.vro.o11n.plugin.basicmachine_gen.BasicMachine_Wrapper" script-object="BasicMachineBasicMachine">
            <id accessor="getInternalId()"/>
            <description></description>
            <properties>
                <property name="displayName" display-name="displayName" bean-property="displayName" show-in-column="true" show-in-description="true"></property>
            </properties>
            <inventory-children/>
            <relations/>
            <events/>
        </finder>
        <finder type="_ROOT" datasource="main-datasource" hidden="true">
            <inventory-children>
                <relation-link name="basicmachines"/>
            </inventory-children>
            <relations>
                <relation name="basicmachines" type="BasicMachine"/>
            </relations>
        </finder>
    </finders>
    <scripting-objects>
        <object script-name="_BasicMachineBasicMachineManager" java-class="de.evoila.vro.o11n.plugin.basicmachine_gen.BasicMachineManager_Wrapper" create="false" is-deprecated="false">
            <description></description>
            <constructors/>
            <attributes/>
            <methods>
                <method script-name="delete" java-name="delete" return-type="void">
                    <description></description>
                    <parameters>
                        <parameter type="String" name="id"></parameter>
                    </parameters>
                </method>
                <method script-name="save" java-name="save" return-type="String">
                    <description></description>
                    <parameters>
                        <parameter type="String" name="name"></parameter>
                        <parameter type="String" name="ipAddress"></parameter>
                        <parameter type="String" name="dnsName"></parameter>
                        <parameter type="String" name="cpu"></parameter>
                        <parameter type="String" name="memory"></parameter>
                        <parameter type="String" name="operatingSystem"></parameter>
                        <parameter type="String" name="diskSize"></parameter>
                        <parameter type="String" name="powerState"></parameter>
                        <parameter type="String" name="snapshot"></parameter>
                        <parameter type="String" name="initialUsername"></parameter>
                        <parameter type="String" name="initialPassword"></parameter>
                        <parameter type="String" name="description"></parameter>
                        <parameter type="String" name="json"></parameter>
                    </parameters>
                </method>
            </methods>
            <singleton script-name="BasicMachineBasicMachineManager" datasource="main-datasource"/>
        </object>
        <object script-name="BasicMachineBasicMachine" java-class="de.evoila.vro.o11n.plugin.basicmachine_gen.BasicMachine_Wrapper" create="true" is-deprecated="false">
            <description></description>
            <constructors/>
            <attributes>
                <attribute script-name="displayName" java-name="displayName" return-type="String" read-only="true"></attribute>
            </attributes>
            <methods/>
        </object>
    </scripting-objects>
</module>
